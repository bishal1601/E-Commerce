@model E_Commerce.Models.Vendor.VendorVm

@{
    ViewBag.Title = "Add Vendor";
    Layout = "_Layout";
}

<div class="container my-4">
    <h2 class="text-center mb-4">@ViewBag.Title</h2>

    <form method="post" class="bg-light p-4 rounded shadow-sm" style="max-width: 600px; margin: auto;">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input type="text" asp-for="Name" class="form-control" placeholder="Enter vendor name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label">Address</label>
            <input type="text" asp-for="Address" class="form-control" placeholder="Enter vendor address" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">E-mail Address</label>
            <input type="email" asp-for="Email" class="form-control" placeholder="Enter vendor email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PhoneNumber" class="form-label">Contact Number</label>
            <input type="number" asp-for="PhoneNumber" class="form-control" placeholder="Enter vendor contact number" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <input type="checkbox" asp-for="Status" class="form-check-input" id="statusCheckbox" />
            <label asp-for="Status" class="form-check-label">Active</label>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success">Save</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @* Include the validation scripts *@
    <partial name="_ValidationScriptsPartial" />
}
