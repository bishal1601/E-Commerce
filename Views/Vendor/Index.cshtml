@model List<E_Commerce.Entities.Vendor>
@{
    ViewBag.Title = "Vendor List";
    Layout = "_Layout";
}

<div class="container my-4">
    <h2 class="text-center mb-4">@ViewBag.Title</h2>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <a class="btn btn-success" asp-controller="Vendor" asp-action="Create">
            <i class="bi bi-plus-lg"></i> Add Vendor
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center p-4">
            <strong>No vendors available.</strong>
        </div>
    }
    else
    {
        <div class="table-responsive" style="max-height: 430px; overflow-y: auto;">
            <table class="table table-hover table-bordered">
                <thead class="table-dark text-center position-sticky top-0">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Address</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var vendor in Model)
                {
                    <tr>
                        <td class="align-middle">@vendor.Name</td>
                        <td class="align-middle">@vendor.Email</td>
                        <td class="align-middle">@vendor.PhoneNumber</td>
                        <td class="align-middle">@vendor.Address</td>
                        <td class="align-middle text-center">
                            @if (vendor.Status)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-warning me-2" asp-controller="Vendor" asp-action="Edit" asp-route-id="@vendor.Id">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a class="btn btn-sm btn-danger" asp-controller="Vendor" asp-action="Delete" asp-route-id="@vendor.Id" onclick="return confirm('Are you sure you want to delete this vendor?');">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
</div>