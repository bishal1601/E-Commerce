@model List<E_Commerce.Entities.Category>

@{
    ViewBag.Title = "Category List";
    Layout = "_Layout";
}


<div class="container my-1">
    <h2 class="text-center mb-1">@ViewBag.Title</h2>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <a class="btn btn-success" asp-controller="Category" asp-action="Create">
            <i class="bi bi-plus-lg"></i> Add Category
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center p-4">
            <strong>No categories available.</strong>
        </div>
    }
    else
    {
        <div class="table-responsive" style="max-height: 430px; overflow-y: auto; ">
            <table class="table table-hover table-bordered">
                <thead class="table-dark text-center position-sticky top-0" >
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@item.Name</td>
                        <td class="align-middle">@item.Description</td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-warning me-2" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a class="btn btn-sm btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this Category?');">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
</div>
